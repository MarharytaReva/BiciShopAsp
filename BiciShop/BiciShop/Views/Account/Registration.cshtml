@model BiciShop.Models.ViewModels.RegisterViewModel
@{
}
<div class="text-center epicBack">

    <div style="opacity: 100%; z-index: 10; margin-top: 5rem;" class="container">
        <h1 class="display-4 hLog">Registration</h1>
        <form method="post" action="~/Account/Registration" asp-antiforgery="true">

            <div class="mb-4 row">
                @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 col-form-label logLabel" })

                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control logInp" })

                    <span asp-validation-for="Email" class="alert alert-danger alertStyle logInp" role="alert">

                    </span>
                </div>
            </div>
            <div class="mb-4 row">
                @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 col-form-label logLabel" })

                <div class="col-sm-10">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control logInp" })

                    <span asp-validation-for="Password" class="alert alert-danger alertStyle logInp" role="alert">

                    </span>
                </div>
            </div>
            <div class="mb-5 row">
                @Html.LabelFor(x => x.Confirm, new { @class = "col-sm-2 col-form-label logLabel" })

                <div class="col-sm-10">
                    @Html.PasswordFor(x => x.Confirm, new { @class = "form-control logInp" })

                    <span asp-validation-for="Confirm" class="alert alert-danger alertStyle logInp" role="alert">

                    </span>
                </div>
            </div>
            <input type="submit" value="Registrate" class="btn btn-outline-success logBtns" />
        </form>
        </div>
    </div>
