@model BiciShop.Models.ViewModels.ExcelViewModels.OrderExcelViewModel

<div class="container" style="margin-top: 7rem;">
    <h1 class="text-center">Export Orders</h1>
    <h3 class="text-center text-danger">@Model.ErrorText</h3>
    <form method="post" action="~/OrderExcel/ExportToExcel">

        <div class="input-group mt-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Offset</span>
            </div>
            <input type="number" min="1" max="1000" name="Offset" value="50" class="form-control" />
        </div>

        <div class="input-group mt-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Page number</span>
            </div>
            <input type="number" min="1" name="OrderQueryOptions.PageNumber" value="1" class="form-control" />
        </div>

        <div class="input-group  mt-3" >
            <select id="sortOrderSelect" class="custom-select" name="OrderQueryOptions.OrderSort" asp-items="@Model.SortOrders">
            </select>
            <div class="input-group-append">
                <button class="btn btn-dark">Sort order by date</button>
            </div>
        </div>

        <div class="input-group  mt-3" >
            <select id="sortOrderSelect" class="custom-select" name="OrderQueryOptions.PhaseId" asp-items="@Model.Phases">
            </select>
            <div class="input-group-append">
                <button class="btn btn-dark">Handle phase filter</button>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-3">
            <input type="submit" value="Export" class="btn btn-success" />
        </div>

    </form>

    <h1 class="text-center mt-3">Edit handle status</h1>

    <form method="post" action="~/OrderExcel/ImportFromExcel" enctype="multipart/form-data">
        <div class="input-group mt-3">
            <select id="sortOrderSelect" class="custom-select" name="phaseId" asp-items="@Model.PhasesForEdit">
            </select>
            <div class="input-group-append">
                <button class="btn btn-dark">Handle status filter</button>
            </div>
        </div>

        <div class="input-group mt-3">
            <div class="custom-file">
                <input type="file" name="postedFile" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04">
                <label class="custom-file-label" for="inputGroupFile04">Choose file</label>
            </div>
            <div class="input-group-append">
                <input class="btn btn-outline-success" type="submit" id="inputGroupFileAddon04" value="Submit edit">
            </div>
        </div>
    </form>
   
</div>
