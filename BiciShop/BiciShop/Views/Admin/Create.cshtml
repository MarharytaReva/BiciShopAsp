@model BiciShop.Models.ViewModels.CreateBiciViewModel
@{
    ViewData["Title"] = "Create";
}

<form method="post" action="~/Admin/Create" enctype="multipart/form-data">
    <div class="text-center secondEpicBack overflow-auto">
        <div style="margin-top: 5rem;" class="container">
            <h1 class="text-light mb-5">Bicicleta</h1>
            <div class="row">
                <div class="col-xl-4 col-lg-4 col-md-12 xs-12 sm-12">
                    <img src="data:image/png;base64,@Model.Bicicleta.Photo" id="biciPhoto" class="createImg" style="height: auto; display: block;" />
                    <div class="d-flex justify-content-around">
                        <div class="input-group mb-3 createFileInp">

                            <div class="custom-file">
                                <input asp-for="File" type="file" name="File" class="custom-file-input logInp " id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                                <label class="custom-file-label" for="inputGroupFile01">Photo</label>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="col-xl-8 col-lg-8 col-md-12 xs-12 sm-12">
                    <div class="container">




                        <div class="mb-3 row inpDiv">
                            @Html.LabelFor(x => x.Bicicleta.Title, new { @class = "col-sm-2 col-form-label logLabel" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Bicicleta.Title, new { @class = "form-control logInp" })

                                <span asp-validation-for="Bicicleta.Title" class="alert alert-danger alertStyle logInp" role="alert">

                                </span>
                            </div>

                        </div>
                        <div class="mb-3 row inpDiv">
                            @Html.LabelFor(x => x.Bicicleta.Price, new { @class = "col-sm-2 col-form-label logLabel" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Bicicleta.Price, new { @class = "form-control logInp" })

                                <span asp-validation-for="Bicicleta.Price" class="alert alert-danger alertStyle logInp" role="alert">

                                </span>
                            </div>

                        </div>

                        <div class="mb-3 row inpDiv">
                            @Html.LabelFor(x => x.Bicicleta.Color, new { @class = "col-sm-2 col-form-label logLabel" })

                            <div class="col-sm-10 inpDiv">
                                @Html.TextBoxFor(x => x.Bicicleta.Color, new { @class = "form-control logInp" })

                                <span asp-validation-for="Bicicleta.Color" class="alert alert-danger alertStyle logInp" role="alert">

                                </span>
                            </div>

                        </div>
                        <div class="mb-3 row inpDiv">
                            @Html.LabelFor(x => x.Bicicleta.IssueYear, new { @class = "col-sm-2 col-form-label logLabel" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Bicicleta.IssueYear, new { @class = "form-control logInp" })

                                <span asp-validation-for="Bicicleta.IssueYear" class="alert alert-danger alertStyle logInp" role="alert">

                                </span>
                            </div>

                        </div>
                        <div class="mb-3 row inpDiv">
                            @Html.LabelFor(x => x.Bicicleta.Weight, new { @class = "col-sm-2 col-form-label logLabel" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Bicicleta.Weight, new { @class = "form-control logInp" })

                                <span asp-validation-for="Bicicleta.Weight" class="alert alert-danger alertStyle logInp" role="alert">

                                </span>
                            </div>

                        </div>
                        <div class="mb-3 row inpDiv">
                            @Html.LabelFor(x => x.Bicicleta.WheelDiameter, new { @class = "col-sm-2 col-form-label logLabel" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Bicicleta.WheelDiameter, new { @class = "form-control logInp" })

                                <span asp-validation-for="Bicicleta.WheelDiameter" class="alert alert-danger alertStyle logInp" role="alert">

                                </span>
                            </div>

                        </div>

                        <div class="mb-3 row inpDiv">
                            @Html.LabelFor(x => x.Bicicleta.Discount, new { @class = "col-sm-2 col-form-label logLabel" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Bicicleta.Discount, new { @class = "form-control logInp" })

                                <span asp-validation-for="Bicicleta.Discount" class="alert alert-danger alertStyle logInp" role="alert">

                                </span>
                            </div>

                        </div>

                        <div class="mb-3 row inpDiv">
                            @Html.LabelFor(x => x.Bicicleta.Quantity, new { @class = "col-sm-2 col-form-label logLabel" })

                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Bicicleta.Quantity, new { @class = "form-control logInp" })

                                <span asp-validation-for="Bicicleta.Quantity" class="alert alert-danger alertStyle logInp" role="alert">

                                </span>
                            </div>

                        </div>

                        <div class="mb-3 row inpDiv">

                            <label class="col-sm-2 col-form-label logLabel">Type</label>
                            <div class="col-sm-10">
                                <div class="logInp">

                                    <select id="typeSelect" class="custom-select" asp-for="Bicicleta.BiciType.BiciTypeId" asp-items="@Model.BiciTypes">
                                    </select>


                                </div>
                            </div>

                        </div>


                        <div class="text-center">
                            <input type="submit" value="Save" class="btn btn-outline-success logBtns" />
                        </div>

                    </div>
                </div>
            </div>


            @Html.HiddenFor(x => x.Bicicleta.BicicletaId)
            @Html.HiddenFor(x => x.Bicicleta.Photo)

        </div>
    </div>
</form>
